{# templates/gestion/player/list.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des joueurs</h1>
    {% if players is empty %}
        <p>Aucun joueur trouvé.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Position</th>
                    <th>Équipe</th>
                    <th>Coach</th>
                </tr>
            </thead>
            <tbody>
                {% for player in players %}
                    <tr>
                        <td>{{ player.id }}</td>
                        <td>{{ player.lastname }}</td>
                        <td>{{ player.firstname }}</td>
                        <td>{{ player.position }}</td>
                        <td>{{ player.equipe }}</td>
                        <td>{{ player.isCoach ? 'Oui' : 'Non' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
