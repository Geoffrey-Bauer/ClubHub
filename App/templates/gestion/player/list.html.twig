{% extends 'base.html.twig' %}

{% block title %}Liste des joueurs{% endblock %}

{% block body %}
    <h1>Liste des joueurs</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Position</th>
                <th>Équipe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for player in players %}
                <tr>
                    <td>{{ player.lastname }}</td>
                    <td>{{ player.firstname }}</td>
                    <td>{{ player.position }}</td>
                    <td>{{ player.team ? player.team.name : 'Aucune équipe' }}</td>
                    <td>
                        <a href="{{ path('player_edit', {'id': player.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('player_delete', {'id': player.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce joueur ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun joueur trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('player_new') }}" class="btn btn-success">Ajouter un nouveau joueur</a>
{% endblock %}