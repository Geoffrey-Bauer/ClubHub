{% extends 'base.html.twig' %}

{% block title %}Liste des équipes - ClubHub{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50">
        {% include '_templates/_nav.html.twig' %}

        <div class="py-10">
            <header>
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <h1 class="text-3xl font-extrabold text-gray-900">Liste des équipes</h1>
                </div>
            </header>
            <main>
                <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
                    <div class="mt-8 bg-white shadow-xl rounded-lg overflow-hidden">
                        <ul class="divide-y divide-gray-200">
                            {% for team in teams %}
                                <li class="px-6 py-5 hover:bg-gray-50 transition duration-150 ease-in-out">
                                    <div class="flex items-center space-x-4">
                                        <div class="flex-shrink-0">
                                            {% if team.imagePath %}
                                                <img src="{{ asset('uploads/images/teams/' ~ team.imagePath) }}" alt="{{ team.name }}" class="w-16 h-16 rounded-full object-cover shadow-inner">
                                            {% else %}
                                                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-inner">
                                                    <span class="text-2xl font-bold text-white">{{ team.name|first|upper }}</span>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center justify-between">
                                                <h2 class="text-xl font-semibold text-gray-900 truncate">{{ team.name }}</h2>
                                                <p class="text-sm text-gray-500 bg-gray-100 px-2 py-1 rounded-full">{{ team.players|length }} joueur{% if team.players|length != 1 %}s{% endif %}</p>
                                            </div>
                                        </div>
                                        <div class="flex-shrink-0 flex space-x-2">
                                            <a href="{{ path('team_edit', {'id': team.id}) }}" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                                                <svg class="-ml-0.5 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                                </svg>
                                                Modifier
                                            </a>
                                            <form action="{{ path('team_delete', {'id': team.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
                                                <button type="submit" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-150">
                                                    <svg class="-ml-0.5 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                                    </svg>
                                                    Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="mt-6 flex justify-end">
                        <a href="{{ path('team_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                            </svg>
                            Créer une nouvelle équipe
                        </a>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}