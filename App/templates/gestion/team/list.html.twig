{% extends 'base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
    <h1>Liste des équipes</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ team.name }}</td>
                    <td>{{ team.city }}</td>
                    <td>{{ team.country }}</td>
                    <td>
                        <a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('team_delete', {'id': team.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune équipe trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_new') }}" class="btn btn-success">Ajouter une nouvelle équipe</a>
{% endblock %}
