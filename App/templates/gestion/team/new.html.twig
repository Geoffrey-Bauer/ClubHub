{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle équipe - ClubHub{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50">
        {% include '_templates/_nav.html.twig' %}

        <div class="py-10">
            <header>
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <h1 class="text-3xl font-bold leading-tight text-gray-900">Créer une nouvelle équipe</h1>
                </div>
            </header>
            <main>
                <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
                    <div class="mt-8 bg-white shadow-xl rounded-lg overflow-hidden">
                        <div class="px-4 py-5 sm:p-6">
                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                            {% for field in form %}
                                {% if field.vars.name != '_token' %}
                                    <div>
                                        {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                        <div class="mt-1 relative rounded-md shadow-sm">
                                            {% if field.vars.name == 'name' %}
                                                {{ form_widget(field, {'attr': {
                                                    'class': 'block w-full px-4 py-3 text-base border-2 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 bg-white shadow-sm',
                                                    'placeholder': 'Entrez le nom de l\'équipe'
                                                }}) }}
                                            {% else %}
                                                {{ form_widget(field, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                                            {% endif %}
                                        </div>
                                        {% if field.vars.errors|length > 0 %}
                                            <div class="mt-1 text-sm text-red-600">
                                                {{ form_errors(field) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                            <div class="pt-5 border-t border-gray-200">
                                <div class="flex justify-end">
                                    <a href="{{ path('team_list') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                                        Annuler
                                    </a>
                                    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                                        Créer l'équipe
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}