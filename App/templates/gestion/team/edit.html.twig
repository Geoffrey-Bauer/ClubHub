{% extends 'base.html.twig' %}

{% block title %}Éditer l'équipe {{ team.name }} - ClubHub{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100">
        {% include '_templates/_nav.html.twig' %}

        <div class="py-10">
            <header>
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <h1 class="text-3xl font-bold leading-tight text-gray-900">Éditer l'équipe {{ team.name }}</h1>
                </div>
            </header>
            <main>
                <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
                    <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                            <div class="space-y-6">
                                {% for field in form %}
                                    {% if field.vars.name != '_token' %}
                                        <div>
                                            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                            <div class="mt-1">
                                                {% if field.vars.name == 'name' %}
                                                    {{ form_widget(field, {'attr': {
                                                        'class': 'block w-full px-4 py-3 text-base border-2 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 bg-white shadow-sm',
                                                        'placeholder': 'Entrez le nom de l\'équipe'
                                                    }}) }}
                                                {% else %}
                                                    {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                                {% endif %}
                                            </div>
                                            {% if field.vars.errors|length > 0 %}
                                                <div class="mt-2 text-sm text-red-600">
                                                    {{ form_errors(field) }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <div class="mt-8">
                                <h2 class="text-lg font-medium text-gray-900">Joueurs de l'équipe</h2>
                                <div class="mt-4 space-y-4">
                                    {% for player in team.players %}
                                        <div class="flex items-center justify-between bg-gray-50 px-4 py-3 rounded-md">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                                                    <span class="text-indigo-700 font-medium text-sm">{{ player.firstname|first }}{{ player.lastname|first }}</span>
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-medium text-gray-900">{{ player.firstname }} {{ player.lastname }}</div>
                                                    <div class="text-sm text-gray-500">{{ player.position }}</div>
                                                </div>
                                            </div>
                                            <a href="{{ path('player_remove', {'id': player.id}) }}" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce joueur de l\'équipe ?');">
                                                Supprimer
                                            </a>
                                        </div>
                                    {% else %}
                                        <p class="text-sm text-gray-500">Aucun joueur dans cette équipe</p>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="pt-5">
                                <div class="flex justify-end">
                                    <a href="{{ path('team_list') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                        Annuler
                                    </a>
                                    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                        Enregistrer les modifications
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}