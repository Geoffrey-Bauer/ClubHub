{% extends 'base.html.twig' %}

{% block title %}Modifier l'entraînement{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-2xl font-bold mb-6">Modifier l'entraînement</h1>

        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.date, 'Date et heure', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.team, 'Équipe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.team, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full inline-block bg-indigo-500 text-white px-4 py-2 rounded-lg hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600">Enregistrer les modifications</button>
        </div>

        {{ form_end(form) }}

        <div class="mt-6">
            <a href="{{ path('planning_training_list') }}" class="w-full inline-block bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 focus:outline-none focus:bg-gray-600 text-center">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
