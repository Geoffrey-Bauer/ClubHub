{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau match - ClubHub{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100">
        {% include '_templates/_nav.html.twig' %}

        <div class="py-10">
            <header>
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <h1 class="text-3xl font-bold leading-tight text-gray-900">Ajouter un nouveau match</h1>
                </div>
            </header>
            <main>
                <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
                    <div class="mt-8 bg-white shadow-lg rounded-lg overflow-hidden">
                        <div class="px-4 py-5 sm:p-6">
                            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                            <div>
                                {{ form_label(form.date, 'Date et heure', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="mt-1">
                                    {{ form_widget(form.date, {'attr': {
                                        'class': 'block w-full px-4 py-3 text-base border-2 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 bg-white shadow-sm',
                                        'placeholder': 'Sélectionnez la date et l\'heure'
                                    }}) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="mt-1">
                                    {{ form_widget(form.lieu, {'attr': {
                                        'class': 'block w-full px-4 py-3 text-base border-2 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 bg-white shadow-sm',
                                        'placeholder': 'Entrez le lieu du match'
                                    }}) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(form.teamDomicile, 'Équipe à domicile', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="mt-1">
                                    {{ form_widget(form.teamDomicile, {'attr': {
                                        'class': 'block w-full px-4 py-3 text-base border-2 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 bg-white shadow-sm'
                                    }}) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(form.teamExterieur, 'Équipe à l\'extérieur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="mt-1">
                                    {{ form_widget(form.teamExterieur, {'attr': {
                                        'class': 'block w-full px-4 py-3 text-base border-2 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 bg-white shadow-sm'
                                    }}) }}
                                </div>
                            </div>

                            <div class="pt-5 border-t border-gray-200">
                                <div class="flex justify-end">
                                    <a href="{{ path('planning_match_list') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                                        Annuler
                                    </a>
                                    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                                        Ajouter le match
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}