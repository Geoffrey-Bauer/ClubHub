{% extends 'base.html.twig' %}

{% block title %}Liste des matches{% endblock %}

{% block body %}

    {% include '_templates/_nav.html.twig' %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Liste des matches</h1>

        <!-- START FILTER -->
        <form method="get" class="mb-4">
            <div class="form-group">
                <label for="teamFilter">Équipe :</label>
                <select id="teamFilter" name="teamFilter" class="form-control">
                    <option value="">Toutes les équipes</option>
                    {% for team in teams %}
                        <option value="{{ team.id }}" {% if app.request.get('teamFilter') == team.id %}selected{% endif %}>
                            {{ team.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </form>
        <!-- END FILTER -->

        {% if battles is empty %}
            <p class="text-gray-600">Aucun match n'a été enregistré.</p>
        {% else %}
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
                    <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date et heure</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lieu</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Équipe domicile</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Équipe extérieure</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                    {% for battle in battles %}
                        <tr>
                            <td class="px-4 py-4 whitespace-nowrap">
                                {{ battle.date|date('d/m/Y H:i') }}
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap">{{ battle.lieu }}</td>
                            <td class="px-4 py-4 whitespace-nowrap">{{ battle.teamDomicile.name }}</td>
                            <td class="px-4 py-4 whitespace-nowrap">{{ battle.teamExterieur.name }}</td>
                            <td class="px-4 py-4 whitespace-nowrap">
                                {% if battle.scoreDomicile is not null and battle.scoreExterieur is not null %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            {{ battle.scoreDomicile }} - {{ battle.scoreExterieur }}
                        </span>
                                {% else %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                            Pas encore joué
                        </span>
                                {% endif %}
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap text-sm font-medium">
                                <a href="{{ path('battle_edit', {'id': battle.id}) }}" class="text-indigo-600 hover:text-indigo-900 mr-2">Éditer</a>
                                <form method="post" action="{{ path('battle_delete', {'id': battle.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce match ?');" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ battle.id) }}">
                                    <button type="submit" class="text-red-600 hover:text-red-900">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        {% endif %}

        <div class="mt-8">
            <a href="{{ path('planning_match_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Ajouter un nouveau match
            </a>
        </div>
    </div>
{% endblock %}